		<%- include('../layout/header') %>


		<%- include('../layout/siderbar') %>

		<div class="content-wrapper">

			<div class="content-header">
				<div class="container-fluid">
					<div class="row mb-2">
						<div class="col-sm-6">
							<h1 class="m-0">Phương thức thanh toán</h1>
						</div>
						<div class="col-sm-6">
							<ol class="breadcrumb float-sm-right">
								<!-- <li class="breadcrumb-item"><a th:href="@{/admin}">Trang chủ</a></li> -->
								<li class="breadcrumb-item active">Phương thức thanh toán</li>
							</ol>
						</div>
					</div>
				</div>
			</div>
			<section class="content">

				<!-- Default box -->
				<div class="col-12">
					<div class="card">
						<div class=" p-2 align-items-center d-flex justify-content-between">
							<div>
								<a href="/admin/methodPay/add" class="btn btn-success">+Thêm</a>
							</div>

							<div class="card-tools">
								<form >
								<div class="input-group input-group-sm" style="width: 150px;">
									
										<input type="text" name="keyword" class="form-control float-right"
											placeholder="Search" th:value="${keyword}">
										<div class="input-group-append">
											<button type="submit" class="btn btn-default">
												<i class="fas fa-search"></i>
											</button>
										</div>
								</div>
								</form>
							</div>
						</div>

						<div class="card-body table-responsive p-0" style="height: 400px;">
							<table class="table table-head-fixed text-nowrap">
								<thead>
									<tr>
										<th>STT</th>
										<th>Tên phương thức</th>
										<th>Tùy chọn</th>
									</tr>
								</thead>
								<tbody>
									<% methodPay.forEach((item,index)=>{%>
									<tr >
										<td > <%=index+1%> </td>
										<td ><%=item.name%></td>
										<td>
										<a href="/admin/methodPay/edit/<%= item.id %>" class="btn btn-success">Sửa</a>
										<a href="/admin/methodPay/delete/<%= item.id %>" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')">Xóa</a>
										</td>
									</tr>
									<%})%>
									
								</tbody>
							</table>
						</div>
