<%- include('../layout/head') %>

	<body class="hold-transition sidebar-mini layout-fixed">
		<div class="wrapper">

			<!-- <div class="preloader flex-column justify-content-center align-items-center">
			<img class="animation__shake" th:src="@{/asset/img/AdminLTELogo.png}" alt="AdminLTELogo" height="60"
				width="60">
		</div> -->

			<%- include('../layout/header') %>


				<%- include('../layout/siderbar') %>

					<div class="content-wrapper">

						<div class="content-header">
							<div class="container-fluid">
								<div class="row mb-2">
									<div class="col-sm-6">
										<h1 class="m-0">Sản phẩm</h1>
									</div>
									<div class="col-sm-6">
										<ol class="breadcrumb float-sm-right">
											<!-- <li class="breadcrumb-item"><a th:href="@{/admin}">Trang chủ</a></li> -->
											<li class="breadcrumb-item active">Sản phẩm</li>
										</ol>
									</div>
								</div>
							</div>
						</div>
						<section class="content">

							<!-- Default box -->
							<div class="col-12">
								<div class="card">
									<div class=" p-2 align-items-center d-flex justify-content-between">
										<div>
											<a href="/admin/product/add" class="btn btn-success">+Thêm</a>
										</div>

										<div class="card-tools">
											<form>
												<div class="input-group input-group-sm" style="width: 150px;">

													<input type="text" name="keyword" class="form-control float-right"
														placeholder="Search" th:value="${keyword}">
													<div class="input-group-append">
														<button type="submit" class="btn btn-default">
															<i class="fas fa-search"></i>
														</button>
													</div>
												</div>
											</form>
										</div>
									</div>

									<div class="card-body table-responsive p-0" style="height: 400px;">
										<table class="table table-head-fixed text-nowrap">
											<thead>
												<tr>
													<th>STT</th>
													<th>Tên sách</th>
													<th>Tác giả</th>
													<th>Giá</th>
													<th>Ảnh</th>
													<th>Trạng thái</th>
													<th>Danh mục</th>
													<th>Tùy chọn</th>
												</tr>
											</thead>
											<tbody>
												<% product.forEach((item, index)=> { %>
													<tr>
														<td>
															<%= index + 1 %>
														</td>
														<td>
															<%= item.name.length> 12 ? item.name.substring(0,
																12) + '...' : item.name %>
														</td>
														<td>
															<%= item.brand.name %>
														</td>
														<td>
															<%= item.price.toLocaleString('en').replace(/,/g, '.') + ' đ' %>
														</td>
														<td>
															<img src="/static/uploads/<%= item.image %>" width="100px">
														</td>
														<td>
															<% if (item.status) { %>
																<span class="badge bg-success">Hiện</span>
																<% } else { %>
																	<span class="badge bg-danger">Ẩn</span>
																	<% } %>
														</td>
														<td>
															<%= item.category.name %>
														</td>
														<td>
															<a href="/admin/product/edit/<%= item.id %>"
																class="btn btn-success">Sửa</a>
															<a href="/admin/product/delete/<%= item.id %>"
																class="btn btn-danger">Xóa</a>
														</td>
													</tr>
													<% }); %>


											</tbody>
										</table>
									</div>
								
								</div>

							</div>

						</section>

					</div>


		</div>

		<%- include('../layout/footer') %>

			<aside class="control-sidebar control-sidebar-dark">

			</aside>

			</div>


			<%- include('../layout/script') %>
				<script>
					$(".nav-link").each(function () {
						var paragraph = $(this).find("p"); // Tìm thẻ <p> trong thẻ <a>
						var paragraphText = paragraph.text().trim(); // Lấy nội dung của thẻ <p>

						// Kiểm tra nội dung của thẻ <p>
						if (paragraphText === "Sản phẩm") {
							$(this).addClass("active"); // Thêm class "active" vào thẻ <a>
						}
					});
				</script>
	</body>

