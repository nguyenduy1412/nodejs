<!doctype html>
<html class="no-js" lang="en" xmlns:th="http://www.thymeleaf.org">

<%- include('./layout/head') %>

<body class="home-4">

	<%- include('./layout/header') %>

	<!-- header-area-end -->
	<!-- slider-group-start -->

	<div class="breadcrumbs-area mb-70">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcrumbs-menu">
						<ul>
							<li><a href="#">Trang chủ</a></li>
							<li><a href="#" class="active">Đánh giá sản phẩm</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- breadcrumbs-area-end -->
	<!-- user-login-area-start -->
	<div class="entry-header-area">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="entry-header-title">

						<div class="product-info-area">
							<div class="">
								<div class="valu valu-2">
									<div class="review-field-ratings">
										<span>Đánh giá của bạn<sup>*</sup></span>
																											
									</div>
									<form method="post" action="/add-rating" enctype="multipart/form-data" >
									<div class="review-form">
										<div class="single-form d-flex">
											<label>Chất lượng sản phẩm <sup>*</sup></label> 
												
												<input type="hidden"  value="1" id="star" name="star"/>
												<input type="hidden"   name="userId" value="<%= user.id %>"/>
												<input type="hidden"   name="orderDetailId" value="<%= orderDetail.id %>"/>
												<input type="hidden" name="productId" value="<%= orderDetail.product.id %>" />
												
											<div class="review-control-vote ml-4">
												<i class="fa fa-star star gold"></i>
												<i class="fa fa-star star"></i>
												<i class="fa fa-star star"></i>
												<i class="fa fa-star star"></i>
												<i class="fa fa-star star"></i>
											</div>


										</div>
										<div class="single-form col-lg-6">
											
												<div class="d-flex justify-content-between mb-3">
													<div><label>Tải ảnh <sup>*</sup></label></div>									
														<div><input class="review-img" type="file" name="fileImage" /></div>
												</div>
												<div class="d-flex justify-content-between">
													<div><label>Đánh giá <sup>*</sup></label></div>
													<div><textarea name="comment" class="review-text" cols="10" rows="4"></textarea></div>
												</div>
											
										</div>

									</div>
									<div class="review-form-button">
										<button type="submit">Gửi đánh giá</button>
									</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<%- include('./layout/footer') %>
	<%- include('./layout/js') %>
	
</body>


