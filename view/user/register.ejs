<!doctype html>
<html class="no-js" lang="en" xmlns:th="http://www.thymeleaf.org">

<%- include('./layout/head') %>

<body class="home-4">

	<%- include('./layout/header') %>

	<!-- header-area-end -->
	<!-- slider-group-start -->

	<div class="breadcrumbs-area mb-70">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcrumbs-menu">
						<ul>
							<li><a href="#">Trang chủ</a></li>
							<li><a href="#" class="active">Đăng ký</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- breadcrumbs-area-end -->
	<!-- user-login-area-start -->
	<div class="user-login-area mb-70">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="login-title text-center mb-10">
						<h2>Đăng ký</h2>
						<div class="text-center  ">
							<span class="text-danger font-weight-bold" ><%= error %></span>
						</div>
					</div>
					
					
				</div>
				<div class="offset-lg-3 col-lg-6 col-md-12 col-12">
					
					<form class="login-form" action="/register" method="post">
						<div class="single-login">
							<label>Email<span>*</span></label>
							<input type="text" name="email" />
							<span class="txt-danger email-error"></span>
						</div>
						<div class="single-login">
							<label>Họ tên<span>*</span></label>
							<input type="text" name="fullName" />
							<span class="txt-danger fullname-error"></span>
						</div>
						<div class="single-login">
							<label>Mật khẩu <span>*</span></label>
							<input type="password" name="password" />
							<span class="txt-danger password-error"></span>
						</div>
						<div class="single-login single-login-2">
							<button type="submit">Đăng ký</button>
							<input id="rememberme" type="checkbox" name="rememberme" value="forever">
							<span>Ghi nhớ mật khẩu</span>
						</div>
						<div><a href="#">Quên mật khẩu</a> </div>
						<div><a href="/login">Đăng nhập</a></div>
					</form>
					
				</div>
			</div>
		</div>
	</div>

	<%- include('./layout/footer') %>
	<%- include('./layout/js') %>
	<script>
		// Hàm kiểm tra định dạng email
		function isValidEmail(email) {
			const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
			return emailRegex.test(email);
		}
	
		// Lắng nghe sự kiện submit của form
		document.querySelector('.login-form').addEventListener('submit', function (event) {
			let isValid = true; // Biến kiểm tra tính hợp lệ của form
	
			// Lấy các trường input
			const emailInput = document.querySelector('input[name="email"]');
			const fullNameInput = document.querySelector('input[name="fullName"]');
			const passwordInput = document.querySelector('input[name="password"]');
	
			// Lấy các span hiển thị lỗi
			const emailError = document.querySelector('.email-error');
			const fullNameError = document.querySelector('.fullname-error');
			const passwordError = document.querySelector('.password-error');
	
			// Xóa thông báo lỗi cũ
			emailError.textContent = '';
			fullNameError.textContent = '';
			passwordError.textContent = '';
	
			// Kiểm tra từng trường
			if (!emailInput.value.trim()) {
				isValid = false;
				emailError.textContent = 'Email không được để trống!';
				emailError.style.color = 'red';
			} else if (!isValidEmail(emailInput.value)) {
				isValid = false;
				emailError.textContent = 'Email không đúng định dạng!';
				emailError.style.color = 'red';
			}
	
			if (!fullNameInput.value.trim()) {
				isValid = false;
				fullNameError.textContent = 'Họ tên không được để trống!';
				fullNameError.style.color = 'red';
			}
	
			if (!passwordInput.value.trim()) {
				isValid = false;
				passwordError.textContent = 'Mật khẩu không được để trống!';
				passwordError.style.color = 'red';
			}
	
			// Ngăn form submit nếu không hợp lệ
			if (!isValid) {
				event.preventDefault();
			}
		});
	</script>
	
	
	
</body>


