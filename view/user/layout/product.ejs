<div class="col-lg-9 col-md-8 col-12">
  <!-- banner-area-5-start -->
  <div class="banner-area-5">
    <div class="single-banner-4 xs-mb">
      <div class="banner-img-2">
        <a href="#"><img src="/static/fe/img/banner/24.jpg" alt="banner" /></a>
      </div>
    </div>
    <div class="single-banner-5">
      <div class="banner-img-2">
        <a href="#"><img src="/static/fe/img/banner/23.jpg" alt="banner" /></a>
      </div>
    </div>
  </div>
  <!-- banner-area-5-end -->
  <!-- new-book-area-start -->
  <div class="new-book-area ptb-50">
    <div class="section-title-2 mb-30">
      <h3>Sách mới</h3>
    </div>
    <div class="tab-active-3 owl-carousel">
      <% listNew.forEach(list=> { %>
        <div class="tab-total">
          <% list.forEach((product, index)=> { %>
            <!-- Kiểm tra index lẻ để thêm class -->
            <div class="product-wrapper <%= (index + 1) % 2 !== 0 ? 'mb-40' : '' %>">
              <div class="product-img">
                <a href="/product-detail/<%= product.id %>">
                  <img src="/static/uploads/<%= product.image %>" alt="book" class="primary" />
                </a>
                <div class="quick-view">
                  <a class="action-view text-light" id="<%= product.id %>" data-bs-target="#productModal"
                    data-bs-toggle="modal" title="Xem chi tiết">
                    <i class="fa fa-search-plus"></i>
                  </a>
                </div>
                <div class="product-flag">
                  <ul>
                    <li><span class="sale">new</span></li>
                    <% if (product.sale> 0) { %>
                      <li><span class="discount-percentage">
                          <%= product.sale %>%
                        </span></li>
                      <% } %>
                  </ul>
                </div>
              </div>
              <div class="product-details text-center">
                <div class="product-rating">
                  <ul>
                    <% for (let i=0; i < 5; i++) { %>
                      <li><a href="#"><i class="fa fa-star"></i></a></li>
                      <% } %>
                  </ul>
                </div>
                <h4>
                  <a href="/product-detail/<%= product.id %>">
                    <%= product.name.length> 15 ? product.name.substring(0, 15) + '...' : product.name %>

                  </a>
                </h4>
                <div class="product-price">
                  <ul>
                    <li class="pricebook">
                      <%= product.priceSale %>
                    </li>
                    <% if (product.sale> 0) { %>
                      <li class="old-price pricebook">
                        <%= product.price %>
                      </li>
                      <% } %>
                  </ul>
                </div>
              </div>
              <div class="product-link">
                <div class="product-button">
                  <% if (user == null) { %>
                  <a href="/product-detail/<%= product.id %>" class="add-to-card" id="<%= product.id %>" title="Add to cart"><i
                      class="fa fa-shopping-cart"></i>Add to cart</a> 
                      <% }else{ %>
                      <button class="add-to-card" id="<%= product.id %>"  title="Add to cart"><i
                        class="fa fa-shopping-cart"></i>Add to cart</button>
                        <% } %>
                </div>
                <div class="add-to-link">
                  <ul>
                    <li><a href="/product-detail/<%= product.id %>" title="Details"><i class="fa fa-external-link"></i></a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <% }); %>
        </div>
        <% }); %>
    </div>

  </div>
  <!-- new-book-area-start -->
  <!-- hot-sell-area-2-start -->
  <div class="hot-sell-area-2 pb-50">
    <div class="section-title-2 title-big bt pt-50 mb-30">
      <h3>Đang giảm giá</h3>
    </div>
    <div class="hot-sell-active owl-carousel">
      <% listSale.forEach(product=> { %>
        <div class="product-wrapper">

          <div class="product-img">
            <a href="/product-detail/<%= product.id %>">
              <img src="/static/uploads/<%= product.image %>" alt="book" class="primary" />
            </a>
            <div class="quick-view">
              <a class="action-view text-light" id="<%= product.id %>" data-bs-target="#productModal" data-bs-toggle="modal"
                title="Xem chi tiết">
                <i class="fa fa-search-plus"></i>
              </a>
            </div>
            <div class="product-flag">
              <ul>
                <li><span class="discount-percentage" > <%= product.sale %> %  <span></li>
              </ul>
            </div>
          </div>
          <div class="product-details text-center">
            <div class="timer-2 text-center">
              <div data-countdown="2024/12/25"></div>
            </div>
            <div class="product-rating mt-20">
              <ul>
                <% for (let i=0; i < 5; i++) { %>
                  <li><a href="#"><i class="fa fa-star"></i></a></li>
                  <% } %>
              </ul>
            </div>
            <h4><a href="/product-detail/<%= product.id %>">
              <%= product.name.length> 25 ? product.name.substring(0, 25) + '...' : product.name %>
            </a>
            </h4>
            <div class="product-price">
              <ul>
                <li class="pricebook" > <%= product.priceSale %> </li>
                <li class="old-price pricebook" ><%= product.price %></li>
              </ul>
            </div>
          </div>
          <div class="product-link">
            <div class="product-button">
              <% if (user == null) { %>
                <a href="/product-detail/<%= product.id %>" class="add-to-card" id="<%= product.id %>" title="Add to cart"><i
                    class="fa fa-shopping-cart"></i>Add to cart</a> 
                    <% }else{ %>
                    <button class="add-to-card" id="<%= product.id %>"  title="Add to cart"><i
                      class="fa fa-shopping-cart"></i>Add to cart</button>
                      <% } %>
            </div>
            <div class="add-to-link">
              <ul>
                <li><a href="/product-detail/<%= product.id %>" title="Details"><i
                      class="fa fa-external-link"></i></a></li>
              </ul>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </div>
  <!-- hot-sell-area-2-end -->
  <!-- product-area-start -->
  <div th:replace="layout/productare::productare"></div>
  <!-- product-area-end -->
</div>