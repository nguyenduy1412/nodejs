<div class="col-lg-3 col-md-4 col-12" >
	<!-- category-area-start -->
	<div class="category-area mb-30">
		<h3><a href="#">Danh mục <i class="fa fa-bars"></i></a></h3>
		<div class="category-menu">
			<nav class="menu">
				<ul>
					<form action="/product" method="post" id="findProduct">
						<input type="hidden" name="categoryId" >
                    <% listCategories.forEach(category=> { %>
					<li ><button  class="button-reset" value="<%= category.id %>"> <%= category.name %></ button></li>
                    <% }); %>
					</form>
					<li class="rx-child"><a href="shop.html">Health, Fitness</a></li>
					<li class="rx-parent">
						<a class="rx-default">
							<span class="cat-thumb fa fa-plus"></span>
