							<span class="cat-thumb fa fa-minus"></span>
							close menu
						</a>
					</li>
				</ul>
			</nav>
		</div>
	</div>
	<!-- category-area-end -->
	<!-- banner-area-start -->
	<div class="banner-area mb-30">
