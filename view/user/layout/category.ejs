			<a href="#"><img src="/static/fe/img/banner/21.jpg" alt="banner" /></a>
		</div>
	</div>
	<!-- banner-area-end -->
	<!-- most-product-area-start -->
	<div class="most-product-area mb-30">
		<div class="section-title-2 mb-30">
			<h3>Sản phẩm nổi bật </h3>
		</div>
		<div class="product-active-2 owl-carousel">
			<div class="product-total-2">
				<% listTrend.forEach(product =>{ %>
				<div class="single-most-product bd mb-18" >
					<div class="most-product-img">
						<a href="/product-detail/<%= product.id %>">
							<img src="/static/uploads/<%= product.image %>" alt="book"
								class="primary" />
					</a>
					</div>
					<div class="most-product-content">
						<h4>
							<a href="/product-detail/<%= product.id %>">
								<%= product.name.length> 15 ? product.name.substring(0,
									15) + '...' : product.name %>

							</a>
						</h4>
						<div class="product-price">
							<ul>
								<li class="pricebook">
									<%= product.priceSale %>
								</li>
								<% if (product.sale> 0) { %>
									<li class="old-price pricebook">
										<%= product.price %>
									</li>
									<% } %>
							</ul>
						</div>
					</div>
				</div>
				<% }) %>
			</div>

			
		</div>
	</div>
