<!doctype html>
<html class="no-js" lang="en" xmlns:th="http://www.thymeleaf.org">

<%- include('./layout/head') %>

<body class="home-4">

	<%- include('./layout/header') %>
	
	<!-- header-area-end -->
	<!-- slider-group-start -->

	<div class="breadcrumbs-area mb-70">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcrumbs-menu">
						<ul>
							<li><a href="#">Trang chủ</a></li>
							<li><a href="#" class="active">giỏ hàng</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- breadcrumbs-area-end -->
	<!-- entry-header-area-start -->
	<div class="entry-header-area">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="entry-header-title">
						<h2>Giỏ hàng</h2>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- entry-header-area-end -->
	<!-- cart-main-area-start -->
	<div class="cart-main-area mb-70">
		<div class="container" id="reloadCartItem">
			<div class="row">
				<div class="col-lg-12">
					<form action="#">
						<div class="table-content table-responsive mb-15 border-1">
							<table>
								<thead>
									<tr>
										<th class="product-thumbnail">Ảnh</th>
										<th class="product-name">Sách</th>
										<th class="product-price">Giá</th>
										<th class="product-quantity">Số lượng</th>
										<th class="product-subtotal">Tổng</th>
										<th class="product-remove">Xóa</th>
									</tr>
								</thead>
								<tbody>
                                    <tr>
                                    <% detailCarts.forEach((item,index)=>{  %>
									
										<td class="product-thumbnail"><a href="#"><img
													src="/static/uploads/<%= item.product.image %>" alt="man" /></a></td>
										<td class="product-name"><a href="#" ><%= item.product.name %></a>
										</td>
										<td class="product-price"><span class="amount"><%= new Intl.NumberFormat('vi-VN').format(item.product.priceSale) + ' đ' %></span>
										</td>
										<td class="product-quantity"><input id="<%=item.id %>" class="ip"
												type="number" value="<%= item.quantity %>"></td>
										<td class="product-subtotal fomatPrice" >
                                            <%= new Intl.NumberFormat('vi-VN').format(item.product.priceSale * item.quantity) + ' đ' %>
										</td>
										<td class="product-remove"><a class="deleteItem" id="<%= item.id %>"><i
													class="fa fa-times"></i></a></td>
									
                                    </tr>
                                    <% }); %>
								</tbody>
							</table>
						</div>
					</form>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-8 col-md-6 col-12">
					<div class="buttons-cart mb-30">
						<ul>
							<li><a href="#">Cập nhật giỏ hàng</a></li>
							<li><a href="#">Tiếp tục mua sắm</a></li>
						</ul>
					</div>
					<div class="coupon">
						<h3>Phiếu mua hàng</h3>
						<p>Nhập mã phiếu giảm giá của bạn nếu bạn có.</p>
						<form action="#">
							<input type="text" placeholder="Coupon code">
							<a href="#">Áp dụng phiếu giảm giá</a>
						</form>
					</div>
				</div>
				<div class="col-lg-4 col-md-6 col-12">
					<div class="cart_totals">
						<h2>Tổng giỏ hàng</h2>
						<table>
							<tbody>
								<tr class="cart-subtotal">
									<th>Tổng phụ</th>
									<td>
										<span class="amount"><%= new Intl.NumberFormat('vi-VN').format(cart.price) + ' đ' %></span>
									</td>
								</tr>
								<tr class="shipping">
									<th>giao hàng</th>
									<td>
										<ul id="shipping_method">

											<li>
												<input type="radio" checked="checked">
												<label> Miễn phí vận chuyển</label>
											</li>
										</ul>

									</td>
								</tr>
								<tr class="order-total">
									<th>Tổng cộng</th>
									<td>
										<strong>
											<span class="amount"><%= new Intl.NumberFormat('vi-VN').format(cart.price) + ' đ' %></span>
										</strong>
									</td>
								</tr>
							</tbody>
						</table>
						<div class="wc-proceed-to-checkout">
							<a href="/checkout">Tiến hành mua hàng</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<%- include('./layout/footer') %>
  <%- include('./layout/js') %>
</body>


